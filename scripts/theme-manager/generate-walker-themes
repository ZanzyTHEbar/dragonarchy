#!/usr/bin/env bash
set -euo pipefail

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
# shellcheck source=lib/theme-utils.sh
source "$SCRIPT_DIR/lib/theme-utils.sh"

for theme in "$THEMES_DIR"/*/; do
  palette="$theme/hyprland-palette.conf"
  [[ -f "$palette" ]] || continue

  background="$(tm_palette_hex "$palette" background)" || continue
  foreground="$(tm_palette_hex "$palette" foreground "$background")"
  accent="$(tm_palette_hex "$palette" accent "$foreground")"
  comment="$(tm_palette_hex "$palette" comment "$foreground")"

  surface="$(tm_hex_blend "$background" "#ffffff" 12)"
  panel="$(tm_hex_blend "$background" "$accent" 15)"
  border="$(tm_hex_blend "$accent" "$background" 45)"
  muted="$(tm_hex_blend "$foreground" "$comment" 60)"
  selection="$(tm_hex_blend "$accent" "$foreground" 25)"
  shadow="$(tm_hex_blend "$background" "#000000" 30)"

  cat >"${theme%/}/walker.css" <<EOF
@define-color foreground ${foreground};
@define-color background ${background};
@define-color accent ${accent};
@define-color surface ${surface};
@define-color panel ${panel};
@define-color border ${border};
@define-color muted ${muted};
@define-color selection ${selection};
@define-color shadow ${shadow};

#window {
  color: @foreground;
  background: transparent;
}

#box {
  background: alpha(@panel, 0.95);
  border-radius: 14px;
  border: 1px solid alpha(@border, 0.85);
  padding: 32px;
  box-shadow: 0 24px 48px alpha(@shadow, 0.55);
}

#search {
  background: alpha(@surface, 0.92);
  color: @foreground;
  border-radius: 12px;
  padding: 12px 16px;
  margin-bottom: 16px;
  box-shadow: inset 0 0 0 1px alpha(@border, 0.25);
}

#prompt {
  color: alpha(@muted, 0.75);
  margin-right: 12px;
}

#clear {
  color: alpha(@muted, 0.8);
}

#typeahead {
  color: alpha(@muted, 0.85);
}

child {
  padding: 10px 14px;
  border-radius: 10px;
  color: @foreground;
  transition: background 120ms ease, transform 120ms ease;
}

child:hover {
  background: alpha(@selection, 0.22);
}

child:selected {
  background: alpha(@selection, 0.35);
  box-shadow: inset 0 0 0 1px alpha(@border, 0.45);
  transform: translateX(4px);
}

#label {
  font-weight: 600;
}

#sub {
  color: alpha(@muted, 0.75);
}

#activationlabel {
  color: alpha(@muted, 0.55);
}

.activation #text,
.activation #icon,
.activation #search {
  opacity: 0.55;
}

.aiItem {
  background: alpha(@surface, 0.88);
  border-radius: 12px;
  color: @foreground;
  box-shadow: inset 0 0 0 1px alpha(@border, 0.12);
}
EOF

  echo "Wrote ${theme}walker.css"
done