# Keep Intel AX210 Bluetooth (8087:0032) out of USB autosuspend to avoid
# BlueZ "org.bluez.Error.NotReady" and kernel "hci0: Opcode 0x0c03 failed: -110" timeouts.
#
# This overrides the generic powersave rule that sets USB devices to "auto".

ACTION=="add", SUBSYSTEM=="usb", ATTR{idVendor}=="8087", ATTR{idProduct}=="0032", TEST=="power/control", ATTR{power/control}="on"
ACTION=="add", SUBSYSTEM=="usb", ATTR{idVendor}=="8087", ATTR{idProduct}=="0032", TEST=="power/autosuspend", ATTR{power/autosuspend}="-1"
ACTION=="add", SUBSYSTEM=="usb", ATTR{idVendor}=="8087", ATTR{idProduct}=="0032", TEST=="power/autosuspend_delay_ms", ATTR{power/autosuspend_delay_ms}="-1"

