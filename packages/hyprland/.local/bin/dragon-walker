#!/usr/bin/env bash
set -euo pipefail

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
if DOTFILES_ROOT="$(git -C "$SCRIPT_DIR" rev-parse --show-toplevel 2>/dev/null)"; then
  :
else
  DOTFILES_ROOT="$(cd "$SCRIPT_DIR/../../../../" && pwd)"
fi

exec "$DOTFILES_ROOT/scripts/walker/dragon/walker-dragon" "$@"


